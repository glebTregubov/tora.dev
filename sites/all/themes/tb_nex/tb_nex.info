stylesheets[all][] = 'css/navigation.css'
stylesheets[all][] = 'css/fonts.css'
stylesheets[all][] = 'css/typo.css'
stylesheets[all][] = 'css/layout.css'
stylesheets[all][] = 'css/scrollbar.css'

; Seperate CSS3 to css3.css
stylesheets[all][] = 'css/css3.css'

; Stylesheets for Print Media
stylesheets[print][] = 'css/print.css'

; Conditional Stylesheets for IE
stylesheets-conditional[IE][all][] = css/ie.css
stylesheets-conditional[IE 8][all][] = css/ie8.css
stylesheets-conditional[IE 9][all][] = css/ie9.css

; Responsive
stylesheets[only screen and (min-width: 720px) and (max-width: 1049px)][] = 'css/screens/tablet.css'
stylesheets[only screen and (min-width: 720px) and (max-width: 959px)][] = 'css/screens/tablet-vertical.css'
stylesheets[only screen and (max-width:719px)][] = 'css/screens/mobile.css'
stylesheets[only screen and (max-width:479px)][] = 'css/screens/mobile-vertical.css'

; Scripts in this theme
