; Theme info
name = 'Tb Nex'
description = TB Nex is a light weight Drupal theme that is based on <a href="http://themebrain.com/about-nucleus">Nucleus</a> and shows a slick styling of some basic Drupal content types such as blog, poll, forum and a contact form. Requires <a href="http://drupal.org/project/nucleus">Nucleus</a> base theme.
core = '7.x'
engine = 'phptemplate'
base theme = 'nucleus'
screenshot = 'screenshot.png'

; Stylesheets
stylesheets[all][] = 'css/html-elements.css'
stylesheets[all][] = 'css/forms.css'
stylesheets[all][] = 'css/page.css'
stylesheets[all][] = 'css/articles.css'
stylesheets[all][] = 'css/comments.css'
stylesheets[all][] = 'css/forum.css'
